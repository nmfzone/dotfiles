compileCppOpenGL() {
	if [ -f $1 ]; then
		rm $1
	fi
	if [ -f $1.o ]; then
		rm $1.o
	fi
	g++ $1.cpp -lX11 -lGL -lGLU -lglut -g -Wall -O2 -o $1
}

